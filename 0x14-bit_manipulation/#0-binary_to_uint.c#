#include "main.h"

/**
 * binary_to_uint - converts binary to unsigned int
 * @b: pointer to the first character
 * Return: the binary converted into unsigned int
 */

unsigned int binary_to_uint(const char *b)
{
	unsigned int i;
	unsigned int count = 0;
	unsigned int number = 0;

	if (b == NULL)
		return (0);



	while (i)
	{
		if (i % 10 != 0 || i % 10 != 1)
			return (0);

		number += (2 ^ count) * (i % 10);
		count++;
		i /= 10;
	}

	return (number);
}
