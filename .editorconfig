# EditorConfig helps developers define and maintain consistent coding styles
# for their projects. For more information, visit:
# https://editorconfig.org/

# Top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{c,h}]
# Set specific properties for C and header files
indent_style = space
indent_size = 4
